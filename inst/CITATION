pkgVer <- function(pkg) {
    if (!exists("meta") || is.null(meta)) meta <- packageDescription(pkg)
    ver <- meta$Version
    paste0('https://github.com/EmanuelSoda/ScreenR/', pkg, ' - R package version ', ver)
}

c(

    bibentry(bibtype="manual",
        title = "",
        author = personList(
            as.person("EmanuelSoda")
        ),
        year = format(Sys.Date(), "%Y"),
        url = "http://www.bioconductor.org/packages/ScreenR",
        note = pkgVer('ScreenR'),
        doi = '10.18129/B9.bioc.ScreenR'
    ),
    bibentry(bibtype="article",
        title = "",
        author = personList(
            as.person("EmanuelSoda")
        ),
        year = format(Sys.Date(), "%Y"),
        journal = "bioRxiv",
        doi = "10.1101/TODO",
        url = "https://www.biorxiv.org/content/10.1101/TODO"
    )
)
